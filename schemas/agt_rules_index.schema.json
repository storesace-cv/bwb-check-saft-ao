{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://bwb.example.com/schemas/agt_rules_index.schema.json",
  "title": "AGT SAF-T (AO) rules index",
  "type": "object",
  "required": ["generated_at", "schema_version", "documents", "rules"],
  "additionalProperties": false,
  "properties": {
    "generated_at": {
      "type": "string",
      "format": "date-time"
    },
    "schema_version": {
      "type": "string"
    },
    "documents": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "source_path",
          "filename",
          "filesize",
          "hash_sha256",
          "title",
          "doc_date",
          "date_confidence",
          "version",
          "type",
          "entities",
          "abstract",
          "uncertainty_level"
        ],
        "additionalProperties": false,
        "properties": {
          "source_path": {"type": "string"},
          "filename": {"type": "string"},
          "filesize": {"type": "integer", "minimum": 0},
          "hash_sha256": {"type": "string", "minLength": 64, "maxLength": 64},
          "title": {"type": "string"},
          "doc_date": {"type": ["string", "null"], "pattern": "^20\\d{2}-\\d{2}-\\d{2}$"},
          "date_confidence": {"type": "string"},
          "version": {"type": ["string", "null"]},
          "type": {"type": ["string", "null"]},
          "entities": {
            "type": "array",
            "items": {"type": "string"},
            "uniqueItems": true
          },
          "abstract": {"type": "string"},
          "uncertainty_level": {"type": ["string", "null"]}
        }
      }
    },
    "rules": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "rule_id",
          "scope",
          "semantics",
          "constraints",
          "applies_since",
          "applies_until",
          "precedence",
          "source_doc_refs"
        ],
        "additionalProperties": false,
        "properties": {
          "rule_id": {"type": "string"},
          "scope": {"type": "string"},
          "semantics": {"type": "string"},
          "constraints": {"type": "object"},
          "applies_since": {"type": ["string", "null"], "pattern": "^20\\d{2}-\\d{2}-\\d{2}$"},
          "applies_until": {"type": ["string", "null"], "pattern": "^20\\d{2}-\\d{2}-\\d{2}$"},
          "precedence": {"type": ["integer", "null"]},
          "source_doc_refs": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["filename", "pages"],
              "additionalProperties": false,
              "properties": {
                "filename": {"type": "string"},
                "pages": {
                  "type": ["array", "null"],
                  "items": {"type": "integer", "minimum": 1}
                }
              }
            }
          }
        }
      }
    }
  }
}
